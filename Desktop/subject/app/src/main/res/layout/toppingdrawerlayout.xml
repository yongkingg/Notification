<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toppingDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    tools:context=".Activity.StartPage">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/body"
                android:text="초콜릿 칩"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/chocolateMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/minus"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/chocolateCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chocolateCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="120dp"
                android:text="0"
                android:background="@drawable/beveragecount"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/chocolatePlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/chocolateCount"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/body"
                android:text="휘핑크림"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/creamMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/minus"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/creamCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/creamCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="120dp"
                android:text="0"
                android:background="@drawable/beveragecount"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/creamPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/creamCount"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/body"
                android:text="타피오카 펄"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pullMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/minus"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/pullCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pullCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/beveragecount"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pullPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/pullCount"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/chocolate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/body"
                android:text="시럽"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/shirupMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/minus"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/shirupCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shirupCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/beveragecount"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/shirupPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/shirupCount"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/topborder"
                android:text="뒤로가기"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/topborder"
                android:text="확인"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


