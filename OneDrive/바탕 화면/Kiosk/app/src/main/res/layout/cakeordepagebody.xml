                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintWidth_percent="0.8" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
